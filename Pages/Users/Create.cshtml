@page
@model sleep_tracker.Pages.Users.CreateModel
<form method ="post">
<div class ="border p-3 mt-4">
	<div class ="row pb-2">
	 <h2 class="text-primary pl-3" > Create Category</h2>
	 <hr />
 </div>
 <div asp-validation-summary ="All"></div>


 <div class ="mb-3">
	 <label asp-for ="record.SleepTime"></label>
	 <input asp-for ="@Model.record.SleepTime" class ="form-control" />
	  <span asp-validation-for="record.SleepTime" class="text-danger"></span>
	 
 </div> 



 <div class ="mb-3">
	 <label asp-for ="record.WakeupTime"></label>
	 <input asp-for ="@Model.record.WakeupTime" class ="form-control" />
	  <span asp-validation-for="record.WakeupTime" class="text-danger"></span>
	 
 </div> 
 <button type="submit" class ="btn btn-primary" style ="width:150px;">Create</button>
 <a asp-page ="Create" class="btn btn-secondary" style="width:150px">Cancel</a>
 </div>
</form>
@section Scripts{
	@{
		<partial name ="_ValidationScriptsPartial"/>
	}
}
